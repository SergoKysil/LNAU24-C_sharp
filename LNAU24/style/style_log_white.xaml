<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="clr-namespace:LNAU24">
    
    <Style x:Key="Style_for_button_white">
        <Setter Property="ItemsControl.Background" Value="Transparent"/>
        <Setter Property="ItemsControl.HorizontalAlignment" Value="Center"/>
        <Setter Property="ItemsControl.Foreground" Value="Green"/>
        <Setter Property="ItemsControl.FontSize" Value="12"/>
        <Setter Property="ItemsControl.BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="Style_for_tbox_white">
        <Setter Property="ItemsControl.Background" Value="White"/>
        <Setter Property="ItemsControl.Foreground" Value="#5B5B5B"/>
        <Setter Property="ItemsControl.FontSize" Value="16"/>
        <Setter Property="ItemsControl.Padding" Value="25,0,0,0"/>
    </Style>

    <Style x:Key="Style_for_img_tb">
        <Setter Property="ItemsControl.Margin" Value="5"/>
        <Setter Property="ItemsControl.Width" Value="16"/>
        <Setter Property="ItemsControl.Height" Value="16"/>
        <Setter Property="ItemsControl.HorizontalAlignment" Value="Left"/>
    </Style>
    
    
</ResourceDictionary>
