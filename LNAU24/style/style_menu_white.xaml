<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LNAU24">

    
    <Style x:Key="Style_for_buttons_white">
        <Setter Property="ItemsControl.Width" Value="auto"/>
        <Setter Property="ItemsControl.Height" Value="50"/>
        <Setter Property="ItemsControl.BorderThickness" Value="0"/>
        <Setter Property="ItemsControl.Background" Value="{x:Null}"/>
        <Setter Property="ItemsControl.Cursor" Value="Hand"/>
        
    </Style>

    <Style x:Key="Style_for_img_menu">
        <Setter Property="ItemsControl.Width" Value="auto"/>
        <Setter Property="ItemsControl.Height" Value="auto"/>
        <Setter Property="ItemsControl.BorderBrush" Value="{x:Null}"/>
        <Setter Property="ItemsControl.Background" Value="{x:Null}"/>
        <Setter Property="ItemsControl.Foreground" Value="#5B5B5B"/>
    </Style>

</ResourceDictionary>